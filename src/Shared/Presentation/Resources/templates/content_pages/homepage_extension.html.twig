{% extends '@shared/base_extension_only_user.html.twig' %}

{% block title %}{{ 'mainnav.homepage'|trans }}{% endblock %}
{% block contentTitle %}{{ 'mainnav.homepage'|trans }}{% endblock %}

{% block body %}

    <div class="mt-16 mx-auto max-w-5xl md:ml-32 md:mr-32">

        <div class="text-6xl font-extrabold mb-16">
            {{ 'contentpages.homepage_extension.copy_1'|trans }}
            <span class="text-mercurius-blue-500">{{ 'contentpages.homepage_extension.copy_2'|trans }}</span>
            {{ 'contentpages.homepage_extension.copy_3'|trans }}
        </div>

        <div>
            <a href="https://chrome.google.com/webstore/detail/fyynio/nhnedpphfpflcmhopnhfhhfhecchponh">
                <img src="{{ asset('assets/images/shared/fyyn.io-in-3-steps_2560x1060.png') }}">
            </a>
        </div>

        <div class="w-full mt-16 flex flex-col md:flex-row gap-8 justify-start">

            <a
                    href="https://chrome.google.com/webstore/detail/fyynio/nhnedpphfpflcmhopnhfhhfhecchponh"
                    class="
                        w-96 flex items-center justify-center px-8 py-3
                        border border-transparent
                        text-base font-medium
                        rounded-md text-white
                        bg-mercurius-blue-500 hover:bg-mercurius-blue-700
                        md:py-4 md:text-lg md:px-10
                    "
            >
                {{ 'contentpages.homepage_extension.cta.download'|trans }}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-16 h-16 animate-pulse">
                    <path fill-rule="evenodd" d="M12 1.5a.75.75 0 01.75.75V4.5a.75.75 0 01-1.5 0V2.25A.75.75 0 0112 1.5zM5.636 4.136a.75.75 0 011.06 0l1.592 1.591a.75.75 0 01-1.061 1.06l-1.591-1.59a.75.75 0 010-1.061zm12.728 0a.75.75 0 010 1.06l-1.591 1.592a.75.75 0 01-1.06-1.061l1.59-1.591a.75.75 0 011.061 0zm-6.816 4.496a.75.75 0 01.82.311l5.228 7.917a.75.75 0 01-.777 1.148l-2.097-.43 1.045 3.9a.75.75 0 01-1.45.388l-1.044-3.899-1.601 1.42a.75.75 0 01-1.247-.606l.569-9.47a.75.75 0 01.554-.68zM3 10.5a.75.75 0 01.75-.75H6a.75.75 0 010 1.5H3.75A.75.75 0 013 10.5zm14.25 0a.75.75 0 01.75-.75h2.25a.75.75 0 010 1.5H18a.75.75 0 01-.75-.75zm-8.962 3.712a.75.75 0 010 1.061l-1.591 1.591a.75.75 0 11-1.061-1.06l1.591-1.592a.75.75 0 011.06 0z" clip-rule="evenodd" />
                </svg>
            </a>
        </div>


        <h1 class="text-6xl font-extrabold mt-32">
            {{ 'contentpages.homepage_extension.title'|trans }}
        </h1>

        <div class="mt-8 text-2xl font-extralight text-neutral-400">
            {{ 'contentpages.homepage_extension.text'|trans }}
        </div>

        <div class="w-full mt-16 flex flex-col md:flex-row gap-8 justify-start">
            <a
                    data-test-id="extensionHomepageSignInCta"
                    href="{{ path('videobasedmarketing.account.presentation.sign_in') }}"
                    class="
                        w-64 flex items-center justify-center px-8 py-3
                        border border-transparent
                        text-base font-medium
                        rounded-md text-white
                        bg-neutral-300 hover:bg-neutral-400
                        md:py-4 md:text-lg md:px-10
                    "
            >
                {{ 'contentpages.homepage_extension.cta.sign_in'|trans }}
            </a>

            <a
                    data-test-id="extensionHomepageSignUpCta"
                    href="{{ path('videobasedmarketing.account.presentation.sign_up') }}"
                    class="
                        w-64 flex items-center justify-center px-8 py-3
                        border border-transparent
                        text-base font-medium
                        rounded-md text-white
                        bg-neutral-300 hover:bg-neutral-400
                        md:py-4 md:text-lg md:px-10
                    "
            >
                {{ 'contentpages.homepage_extension.cta.sign_up'|trans }}
            </a>
        </div>
    </div>

    <!-- kernel_environment: {{ kernel_environment }} -->

{% endblock %}
