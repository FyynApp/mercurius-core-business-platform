{# @var this \App\Shared\Presentation\Component\SideNavigationComponent #}
{# @var TwigHelperService \App\Shared\Presentation\Service\TwigHelperService #}

{% if this.type is same as 'stacked' %}
    <div class="pt-4 pb-0 z-50">

        {% if this.user and user.registered %}
            <div class="flex items-center px-3 md:hidden">
                <div class="flex-shrink-0">

                    {% if   app.user.profilePhoto
                        and TwigHelperService.capabilitiesService.canSeeOwnProfilePhoto(app.user)
                    %}
                        <img
                                class="h-8 w-8 rounded-full ring-2 ring-mercurius-blue-700"
                                src="{{ TwigHelperService.accountAssetsService.getUrlForUserProfilePhoto(app.user) }}"
                                alt=""
                        >
                    {% else %}
                        <!-- Heroicon name: outline/user-circle -->
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    {% endif %}

                </div>
                <div class="ml-3">

                    {% if TwigHelperService.capabilitiesService.canSeeOwnProfileName(app.user) %}
                        <div class="text-base font-extralight leading-none text-neutral-900">
                            {{ app.user.firstName }}
                            {{ app.user.lastName }}
                        </div>
                    {% endif %}

                    <div class="text-sm font-light leading-none text-neutral-600">{{ app.user.userIdentifier }}</div>
                </div>
            </div>
        {% endif %}

        <div class="mt-3 px-0 space-y-1">

            {% for entry in this.entries %}
                <a
                    {% if entry.active %}
                        class="text-sm bg-mercurius-blue-900 text-neutral-50 block px-3 py-2 rounded-md font-extralight"
                        aria-current="page"
                    {% else %}
                        class="text-sm text-mercurius-blue-900 hover:bg-mercurius-blue-700 hover:text-white block px-3 py-2 rounded-md font-extralight"
                    {% endif %}

                    href="{{ path(entry.routeName) }}"
                >
                    {{ entry.displayNameTransId|trans }}
                </a>
            {% endfor %}


            <div class="flex flex-row justify-start mt-4 pt-2 pb-0 border-1 border-l-0 border-r-0 border-b-0 border-mercurius-blue-100">
                <a
                        class="
                            flex flex-row justify-center
                            text-mercurius-blue-900 block px-3 py-2 font-extralight
                        "
                        href="{{ asset(
                            'assets/browser-extension-chrome/mercurius-browser-extension-chrome.'
                            ~ app.environment
                            ~ '.latest.zip'
                        ) }}"
                >
                    <div class="break-words w-32 text-sm font-extralight">
                        {{ 'sidenav.download_browser_extension_chrome'|trans }}
                    </div>
                    <div>
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-7 h-7">
                            <path d="M12 1.5a.75.75 0 01.75.75V7.5h-1.5V2.25A.75.75 0 0112 1.5zM11.25 7.5v5.69l-1.72-1.72a.75.75 0 00-1.06 1.06l3 3a.75.75 0 001.06 0l3-3a.75.75 0 10-1.06-1.06l-1.72 1.72V7.5h3.75a3 3 0 013 3v9a3 3 0 01-3 3h-9a3 3 0 01-3-3v-9a3 3 0 013-3h3.75z" />
                        </svg>
                    </div>
                </a>
            </div>

            <div class="mt-8 pt-4 border-1 border-l-0 border-r-0 border-b-0 border-mercurius-blue-100 text-mercurius-blue-900 block px-3 py-2 font-extralight">
                <div class="flex flex-row gap-4 justify-start mx-auto text-sm font-extralight w-full">
                    <a
                            href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge(app.request.query.all)|merge({ _locale: 'en'})) }}"
                            class=""
                    >{{ 'footernav.english'|trans }}</a>

                    <a
                            href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge(app.request.query.all)|merge({ _locale: 'de'})) }}"
                            class=""
                    >{{ 'footernav.german'|trans }}</a>
                </div>
            </div>

        </div>
    </div>

{% else %}

    {% if TwigHelperService.capabilitiesService.canSeeProfileDropdownInSideNavigation(app.user) %}
        <div class="hidden md:block z-50">
            <div class="ml-4 flex items-center md:ml-6">

                <!-- Profile dropdown -->
                <div
                        {{ stimulus_controller('shared-navProfileDropdown') }}
                        class="ml-3 relative"
                >
                    <div>
                        <button
                                {{ stimulus_action('shared-navProfileDropdown', 'click') }}
                                type="button"
                                class="max-w-xs bg-gray-800 rounded-full flex items-center text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white"
                                id="user-menu-button"
                                aria-expanded="false"
                                aria-haspopup="true"
                        >
                            <span class="sr-only">Open user menu</span>
                            {% if   app.user.profilePhoto
                                and TwigHelperService.capabilitiesService.canSeeOwnProfilePhoto(app.user)
                            %}
                                <img
                                        class="h-8 w-8 rounded-full ring-2 ring-gray-600"
                                        src="{{ TwigHelperService.accountAssetsService.getUrlForUserProfilePhoto(app.user) }}"
                                        alt=""
                                >
                            {% else %}
                                <!-- Heroicon name: outline/user-circle -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            {% endif %}
                        </button>
                    </div>

                    <div
                            {{ stimulus_target('shared-navProfileDropdown', 'dropdown') }}
                            class="hidden origin-top-right absolute right-0 mt-2 w-48 rounded-md py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none"
                            role="menu"
                            aria-orientation="vertical"
                            aria-labelledby="user-menu-button"
                            tabindex="-1"
                    >

                        {% for entry in this.entries %}
                            <a
                                    {% if entry.active %}
                                        class="bg-gray-100 block px-4 py-2 text-sm text-gray-700"
                                        role="menuitem"
                                        aria-current="page"
                                    {% else %}
                                        class="block px-4 py-2 text-sm text-gray-700"
                                        role="menuitem"
                                    {% endif %}

                                    href="{{ path(entry.routeName) }}"
                            >
                                {{ entry.displayNameTransId|trans }}
                            </a>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>

    {% else %}

        {% for entry in this.entries %}
            <a
                {% if entry.active %}
                    class="bg-mercurius-blue-900 text-neutral-50 px-3 py-2 rounded-md text-sm font-extralight z-50 mr-2"
                    aria-current="page"
                {% else %}
                    class="text-mercurius-blue-900 hover:bg-mercurius-blue-700 hover:text-white px-3 py-2 rounded-md text-sm font-extralight mr-2"
                {% endif %}

                href="{{ path(entry.routeName) }}"
            >
                {{ entry.displayNameTransId|trans }}
            </a>
        {% endfor %}

    {% endif %}

{% endif %}
