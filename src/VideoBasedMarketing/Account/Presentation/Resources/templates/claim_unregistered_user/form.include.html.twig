{# @var TwigHelperService \App\Shared\Presentation\Service\TwigHelperService #}

{% trans_default_domain 'videobasedmarketing.account' %}

<form
        action="{{ path('videobasedmarketing.account.presentation.claim_unregistered_user.handle_form_submit') }}"
        method="post"
>
    <div class="
        flex flex-col gap-8 w-full
        justify-center items-center
        lg:items-end
    ">

        <div class="w-full">
            <label for="email" class="sr-only">
                {{ 'sign_in.placeholder.email'|trans }}
            </label>
            <input
                    id="email"
                    name="{{ form.email.vars.full_name }}"
                    type="email"
                    autocomplete="email"
                    required
                    class="
                        appearance-none relative block
                        h-16 w-full max-w-xl px-3 py-2
                        border border-gray-300
                        placeholder-gray-500 text-gray-900
                        rounded-md
                        focus:outline-none
                        ring-mercurius-blue-500
                        border-mercurius-blue-500
                        border-2
                        bg-mercurius-blue-50
                        focus:z-10 sm:text-sm
                    "
                    placeholder="{{ 'sign_in.placeholder.email'|trans }}"
            />
        </div>

        <div class="w-full">
            <button
                    data-test-id="submit"
                    type="submit"
                    class="
                        w-64 flex items-center justify-center px-8 py-3
                        border border-transparent
                        text-base font-medium
                        rounded-md text-white
                        bg-mercurius-blue-500 hover:bg-mercurius-blue-700
                        md:py-4 md:text-lg md:px-10
                    "
                >
                {{ 'claim_unregistered_user.form.cta'|trans }}
            </button>
        </div>

        <div class="text-xs text-neutral-500 w-full font-extralight">
            {{ 'claim_unregistered_user.form.fineprint'|trans }}
        </div>

        <div class="text-neutral-700 mt-8 w-full">
            <div>
                <a
                        href="{{ path('videobasedmarketing.account.infrastructure.thirdpartyauth.linkedin.start') }}"
                >
                    <p
                            class="mb-2"
                            data-test-id="claim-by-thirdpartyauth-linkedin-text"
                    >
                        {{ 'claim_unregistered_user.form.third_party_auth.linkedin.text'|trans }}
                    </p>

                    <img
                            class="w-36"
                            src="{{ asset('assets/images/videobasedmarketing/account/third-party-auth/linkedin/linkedin-logo.png') }}"
                            alt="LinkedIn"
                    >

                    <p class="font-bold">
                        {{ 'claim_unregistered_user.form.third_party_auth.linkedin.cta'|trans }}
                    </p>
                </a>
            </div>
        </div>

        <div class="text-neutral-700 mt-8 w-full">
            {{ 'claim_unregistered_user.form.login_text'|trans }}
            <div>
                <a href="{{ path('videobasedmarketing.account.presentation.sign_in') }}" class="font-bold">
                    {{ 'claim_unregistered_user.form.login_cta'|trans }}
                </a>
            </div>
        </div>


    </div>

    {{ form_row(form._token) }}
</form>
