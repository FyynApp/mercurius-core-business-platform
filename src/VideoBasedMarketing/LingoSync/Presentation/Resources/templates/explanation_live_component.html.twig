                </div>
                <div class="max-w-xl">
                    <img
                            class="rounded-lg drop-shadow-lg"
                            src="{{ asset('assets/images/videobasedmarketing/lingosync/explanation/lingosync-explanation-step-2.jpg') }}"
                    >
                </div>
            </div>
        {% endif %}


        {% if this.slide is same as 7 %}
            <div>
                <div class="text-7xl text-white font-bold mb-4">
                    {{ 'explanation.slide.7.title'|trans }}
                </div>
                <div class="text-4xl text-white font-semibold">
                    {{ 'explanation.slide.7.subtitle'|trans }}
                </div>
            </div>
        {% endif %}


        {% if this.slide is same as 8 %}
            <div class="flex lg:flex-row flex-col justify-center items-start gap-8">
                <div class="text-4xl text-white font-semibold">
                    <ul class="flex flex-col gap-8">
                        <li>{{ 'explanation.slide.8.text_1'|trans }}</li>
                        <li>{{ 'explanation.slide.8.text_2'|trans }}</li>
                        <li>{{ 'explanation.slide.8.text_3'|trans }}</li>
                    </ul>
                </div>
                <div class="max-w-xl">
                    <img
                            class="rounded-lg drop-shadow-lg"
                            src="{{ asset('assets/images/videobasedmarketing/lingosync/explanation/lingosync-explanation-step-3-1.png') }}"
                    >
                </div>
            </div>
        {% endif %}


        {% if this.slide is same as 9 %}
            <div class="flex lg:flex-row flex-col justify-center items-start gap-8">
                <div class="text-4xl text-white font-semibold">
                    <ul class="flex flex-col gap-8">
                        <li>{{ 'explanation.slide.9.text_1'|trans }}</li>
                        <li>{{ 'explanation.slide.9.text_2'|trans }}</li>
                    </ul>
                </div>
                <div class="max-w-xl">
                    <img
                            class="rounded-lg drop-shadow-lg"
                            src="{{ asset('assets/images/videobasedmarketing/lingosync/explanation/lingosync-explanation-step-3-2.png') }}"
                    >
                </div>
            </div>
        {% endif %}


        {% if this.slide is same as 10 %}
            <div class="flex lg:flex-row flex-col justify-center items-start gap-8">
                <div class="text-4xl text-white font-semibold">
                    <ul class="flex flex-col gap-8">
                        <li>{{ 'explanation.slide.10.text_1'|trans }}</li>
                        <li>{{ 'explanation.slide.10.text_2'|trans }}</li>
                    </ul>
                </div>
                <div class="max-w-xl">
                    <img
                            class="rounded-lg drop-shadow-lg"
                            src="{{ asset('assets/images/videobasedmarketing/lingosync/explanation/lingosync-explanation-step-3-2.png') }}"
                    >
                </div>
            </div>
        {% endif %}


        {% if this.slide is same as 11 %}
            <div class="flex lg:flex-row flex-col justify-center items-start gap-8">
                <div class="text-4xl text-white font-semibold">
                    {{ 'explanation.slide.11.text'|trans }}
                </div>
                <div class="max-w-xl">
                    <img
                            class="rounded-lg drop-shadow-lg"
                            src="{{ asset('assets/images/videobasedmarketing/lingosync/explanation/lingosync-explanation-step-3-3.png') }}"
                    >
                </div>
            </div>
        {% endif %}


        {% if this.slide is same as 12 %}
            <div class="flex lg:flex-row flex-col justify-center items-start gap-8">
                <div class="text-4xl text-white font-semibold">
                    <ul class="flex flex-col gap-8">
                        <li>{{ 'explanation.slide.12.text_1'|trans }}</li>
                        <li>{{ 'explanation.slide.12.text_2'|trans }}</li>
                    </ul>
                </div>
                <div class="max-w-xl">
                    <img
                            class="rounded-lg drop-shadow-lg"
                            src="{{ asset('assets/images/videobasedmarketing/lingosync/explanation/lingosync-explanation-step-3-4.png') }}"
                    >
                </div>
            </div>
        {% endif %}


        <div
                class="
                    fixed bottom-16 right-16 flex flex-row justify-end items-end
                    w-full bg-gradient-to-r from-transparent to-mercurius-blue-900 p-4 pr-6 rounded-r-md
                "
        >
            <div class="flex flex-col gap-1 justify-center items-end text-white text-2xl font-semibold">

                <div class="font-extralight">
                    {{ 'explanation.current_slide'|trans }}
                    {{ this.slide }}
                    {{ 'explanation.current_slide_of'|trans }}
                    {{ this.maxSlides }}
                </div>

                <div class="flex flex-row gap-4">
                    {% if this.slide > 1 %}
                        <button
                                data-action="live#action"
                                data-live-action-param="previousSlide"
                        >
                            {{ 'explanation.previous_slide'|trans }}
                        </button>
                    {% endif %}


                    <button
                            {% if this.slide >= this.maxSlides %}
                                class="opacity-0"
                                disabled="disabled"
                            {% endif %}
                            data-action="live#action"
                            data-live-action-param="nextSlide"
                    >
                        {{ 'explanation.next_slide'|trans }}
                    </button>

                    <button
                            data-action="live#emit"
                            data-event="lingoSyncExplanationSkipped"
                    >
                        {{ 'explanation.skip'|trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
