{# @var this \App\VideoBasedMarketing\Presentationpages\Presentation\Component\PresentationspageEditFormLiveComponent #}
{# @var TwigHelperService \App\Shared\Presentation\Service\TwigHelperService #}

<div {{ attributes }}>

    {% embed '@shared/embeds/two_column_content_box_content_row.html.twig' with { odd: false, colspanLeft: 7, colspanRight: 5 } %}

        {% block contentLeft %}

            <div class="mb-16">
                <div class="mb-8 font-bold text-xl">
                    {{ 'feature.presentationpages.editor.edit_form.form_headline'|trans }}
                </div>


                <div class="mb-8">
                    <h2 class="text-lg mt-8 mb-4">
                        {{ 'feature.presentationpages.editor.edit_form.subheadline_basesettings'|trans }}
                    </h2>

                    {% form_theme form 'form_themes/form_theme_default.html.twig' %}

                    {{ form_start(form) }}


                    {{ form_row(form.title, {
                        attr: {
                            'data-model': 'on(input)|debounce(250)|' ~ form.title.vars.full_name,
                            'data-action': 'live#action',
                            'data-action-name': "debounce(300)|save"
                        }
                    }) }}

                    <label class="block text-gray-800 font-bold required mb-2">
                        {{ 'feature.presentationpages.editor.edit_form.label_background'|trans }}
                    </label>

                    <div class="mb-6 rounded-md bg-white pl-8 p-2 shadow-inner">
                        {% for background in this.presentationpage.possibleBackgrounds %}

                            {# @var background \App\VideoBasedMarketing\Presentationpages\Domain\Enum\PresentationpageBackground #}

                            <button
                                    class="mr-8 mt-4 mb-4"
                                    type="button"
                                    data-action="live#action"
                                    data-action-name="setBackground(backgroundValue={{ background.value }})"
                            >
                                {% if background is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageBackground::BgColor') %}
                                    <div class="
                                                {% if this.presentationpage.background is same as background %}
                                                        border-1 border-black p-2 rounded-md
                                                {% else %}
                                                        border-1 border-gray-100 p-2 rounded-md
                                                {% endif %}
                                             ">
                                        <div
                                                class="w-24 h-12 rounded-md border-1"
                                                style="background-color: {{ this.presentationpage.bgColor.value }}"
                                        >&nbsp;</div>
                                    </div>
                                {% else %}
                                    <div class="
                                            {% if this.presentationpage.background is same as background %}
                                                    border-1 border-black p-2 rounded-md
                                            {% else %}
                                                    border-1 border-gray-100 p-2 rounded-md
                                            {% endif %}
                                         ">
                                        <img
                                                class="w-24 h-12 rounded-md object-cover"
                                                src="{{ asset('assets/images/feature/presentationpages/background-images/' ~ background.toPreviewAssetName) }}"
                                                alt="{{ background.value }}"
                                        >
                                    </div>
                                {% endif %}


                                {{ ('feature.presentationpages.editor.edit_form.background_name.' ~ background.value)|trans }}
                            </button>
                        {% endfor %}
                    </div>

                    <label class="block text-gray-800 font-bold required">
                        {{ 'feature.presentationpages.editor.edit_form.label_bg_color'|trans }}
                    </label>
                    <div class="mt-2 mb-4">
                        {% for bgColor in this.presentationpage.possibleBgColors %}
                            <button
                                    style="background-color: {{ bgColor.value }}"
                                    class="
                                        {% apply spaceless %}
                                            {% if this.presentationpage.bgColor.value is same as bgColor.value %}
                                                border-gray-700
                                                shadow-neutral-700
                                                outline-2
                                                outline-white
                                                shadow-sm
                                            {% endif %}
                                            border-1
                                            w-8
                                            h-8
                                            inline-flex
                                            rounded-full
                                            cursor-pointer
                                            focus:outline-none
                                            focus:shadow-outline
                                        {% endapply %}
                                    "
                                    type="button"
                                    data-action="live#action"
                                    data-action-name="setBgColor(bgColorValue={{ bgColor.value }})"
                            ></button>
                        {% endfor %}
                    </div>

                    
                    <label class="block text-gray-800 font-bold required">
                        {{ 'feature.presentationpages.editor.edit_form.label_fg_color'|trans }}
                    </label>
                    <div class="mt-2 mb-4">
                        {% for fgColor in this.presentationpage.possibleFgColors %}
                            <button
                                    style="background-color: {{ fgColor.value }}"
                                    class="
                                        {% apply spaceless %}
                                            {% if this.presentationpage.fgColor.value is same as fgColor.value %}
                                                border-gray-700
                                                shadow-neutral-700
                                                outline-2
                                                outline-white
                                                shadow-sm
                                            {% endif %}
                                            border-1
                                            w-8
                                            h-8
                                            inline-flex
                                            rounded-full
                                            cursor-pointer
                                            focus:outline-none
                                            focus:shadow-outline
                                        {% endapply %}
                                    "
                                    type="button"
                                    data-action="live#action"
                                    data-action-name="setFgColor(fgColorValue={{ fgColor.value }})"
                            ></button>
                        {% endfor %}
                    </div>
                    

                    <label class="block text-gray-800 font-bold required">
                        {{ 'feature.presentationpages.editor.edit_form.label_text_color'|trans }}
                    </label>
                    <div class="mt-2 mb-4">
                        {% for textColor in this.presentationpage.possibleTextColors %}
                            <button
                                    style="background-color: {{ textColor.value }}"
                                    class="
                                        {% apply spaceless %}
                                            {% if this.presentationpage.textColor.value is same as textColor.value %}
                                                border-gray-700
                                                shadow-neutral-700
                                                outline-2
                                                outline-white
                                                shadow-sm
                                            {% endif %}
                                            border-1
                                            w-8
                                            h-8
                                            inline-flex
                                            rounded-full
                                            cursor-pointer
                                            focus:outline-none
                                            focus:shadow-outline
                                        {% endapply %}
                                    "
                                    type="button"
                                    data-action="live#action"
                                    data-action-name="setTextColor(textColorValue={{ textColor.value }})"
                            ></button>
                        {% endfor %}
                    </div>

                    <h2 class="text-lg mt-8 mb-4">
                        {{ 'feature.presentationpages.editor.edit_form.subheadline_elements'|trans }}
                    </h2>

                    {% for elementForm in form.presentationpageElements %}

                        {% set presentationpageElement = elementForm.vars.value %}

                        {# @var presentationpageElement \App\VideoBasedMarketing\Presentationpages\Domain\Entity\PresentationpageElement #}

                        <div class="p-4 pt-8 bg-indigo-50 mb-8 rounded-md">

                            <div class="flex flex-col">

                                <div class="flex flex-row justify-start items-start">

                                    <div class="w-full mr-8">

                                        {% if presentationpageElement.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::MercuriusVideo') %}
                                            <p class="font-bold">
                                                {{ 'feature.presentationpages.editor.edit_form.label_element_variant.mercurius_video'|trans }}
                                            </p>
                                            <p class="max-w-md">
                                                {{ 'feature.presentationpages.editor.edit_form.label_element_variant.mercurius_video_note'|trans }}
                                            </p>
                                        {% endif %}

                                        {% for elementFormRow in elementForm %}

                                            {% if elementFormRow.vars.name is same as 'position' %}
                                                {{ form_row(elementFormRow) }}
                                            {% else %}
                                                <div class="mb-6">
                                                    {{ form_label(elementFormRow) }}

                                                    <div class="w-full">
                                                        {{ form_widget(elementFormRow, {
                                                            attr: {
                                                                'data-model': 'on(input)|debounce(250)|' ~ elementFormRow.vars.full_name,
                                                                'data-action': 'live#action',
                                                                'data-action-name': "debounce(300)|save"
                                                            }
                                                        }) }}
                                                    </div>

                                                    {% if presentationpageElement.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::CalendlyEmbed') %}
                                                        <p class="font-light mt-4 text-gray-500">
                                                            {{ 'feature.presentationpages.editor.edit_form.help_element_variant.calendly_embed_start'|trans }}
                                                            <a href="https://calendly.com/event_types/user/me" target="_blank">
                                                                https://calendly.com/event_types/user/me
                                                            </a>
                                                            {{ 'feature.presentationpages.editor.edit_form.help_element_variant.calendly_embed_end'|trans }}
                                                        </p>
                                                    {% endif %}

                                                    {% if presentationpageElement.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::Divider') %}
                                                        <div
                                                                class="w-full h-1 mt-4 mb-4"
                                                                style="background-color: {{ this.presentationpage.fgColor.value }}"
                                                        ></div>
                                                    {% endif %}

                                                    {{ form_help(elementFormRow) }}
                                                    {{ form_errors(elementFormRow) }}
                                                </div>
                                            {% endif %}

                                        {% endfor %}
                                    </div>

                                    {% if form.vars.valid %}

                                        <div class="flex flex-row justify-end items-start w-20">
                                            <div class="flex flex-col justify-end">
                                                {% if presentationpageElement.position is not same as 0 %}
                                                    <div>
                                                        <button
                                                                class="p-0 ml-1 mr-0"
                                                                data-action="live#action"
                                                                data-action-name="moveElementUp(elementId={{ presentationpageElement.id }})"
                                                                type="button"
                                                        >
                                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="ml-1 pt-1 pb-1 w-8 h-8">
                                                                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm.53 5.47a.75.75 0 00-1.06 0l-3 3a.75.75 0 101.06 1.06l1.72-1.72v5.69a.75.75 0 001.5 0v-5.69l1.72 1.72a.75.75 0 101.06-1.06l-3-3z" clip-rule="evenodd" />
                                                            </svg>
                                                        </button>
                                                    </div>
                                                {% endif %}

                                                {% if presentationpageElement.position is not same as (form.presentationpageElements|length - 1) %}
                                                    <div>
                                                        <button
                                                                class="p-0 ml-1 mr-0"
                                                                data-action="live#action"
                                                                data-action-name="moveElementDown(elementId={{ presentationpageElement.id }})"
                                                                type="button"
                                                                title=""
                                                        >
                                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="ml-1 mr-0 pt-1 pb-1 w-8 h-8">
                                                                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm-.53 14.03a.75.75 0 001.06 0l3-3a.75.75 0 10-1.06-1.06l-1.72 1.72V8.25a.75.75 0 00-1.5 0v5.69l-1.72-1.72a.75.75 0 00-1.06 1.06l3 3z" clip-rule="evenodd" />
                                                            </svg>
                                                        </button>
                                                    </div>
                                                {% endif %}
                                            </div>

                                            <div>
                                                <button
                                                        data-action="live#action"
                                                        data-action-name="removeElement(elementId={{ presentationpageElement.id }})"
                                                        type="button"
                                                >
                                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="pt-1 pb-1 text-red-600 w-8 h-8">
                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 9.75l4.5 4.5m0-4.5l-4.5 4.5M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                    </svg>
                                                </button>
                                            </div>
                                        </div>

                                    {% endif %}

                                </div>

                                {% if presentationpageElement.elementVariant is not same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::Divider') %}
                                    <div class="w-full">

                                        <label class="block text-gray-800 font-bold required mt-4 mb-2">
                                            {{ 'feature.presentationpages.editor.edit_form.label_horizontal_position'|trans }}
                                        </label>
                                        <button
                                                class="
                                                    p-0
                                                    border-1
                                                    border-indigo-200
                                                    {% if presentationpageElement.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Left') %}
                                                        bg-indigo-200
                                                    {% endif %}
                                                "
                                                data-action="live#action"
                                                data-action-name="setElementHorizontalPosition(elementId={{ presentationpageElement.id }}, horizontalPosition={{ constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Left').value }})"
                                                type="button"
                                        >
                                            <!-- bars-3-bottom-left -->
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="pt-1 pb-1 w-8 h-8">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12" />
                                            </svg>
                                        </button>

                                        <button
                                                class="
                                                    p-0
                                                    border-1
                                                    border-indigo-200
                                                    {% if presentationpageElement.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Center') %}
                                                        bg-indigo-200
                                                    {% endif %}
                                                "
                                                data-action="live#action"
                                                data-action-name="setElementHorizontalPosition(elementId={{ presentationpageElement.id }}, horizontalPosition={{ constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Center').value }})"
                                                type="button"
                                        >
                                            <!-- bars-3 -->
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="pt-1 pb-1 w-8 h-8">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                                            </svg>
                                        </button>

                                        <button
                                                class="
                                                    p-0
                                                    border-1
                                                    border-indigo-200
                                                    {% if presentationpageElement.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Right') %}
                                                        bg-indigo-200
                                                    {% endif %}
                                                "
                                                data-action="live#action"
                                                data-action-name="setElementHorizontalPosition(elementId={{ presentationpageElement.id }}, horizontalPosition={{ constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Right').value }})"
                                                type="button"
                                        >
                                            <!-- bars-3-bottom-right -->
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="pt-1 pb-1 w-8 h-8">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5M12 17.25h8.25" />
                                            </svg>
                                        </button>
                                    </div>
                                {% endif %}

                            </div>

                        </div>

                    {% endfor %}

                    {% do form.presentationpageElements.setRendered %}

                    {% if form.vars.valid %}

                        {% if not this.presentationpage.hasMercuriusVideoVariantElement %}
                            <button
                                    class="cta-link-primary mb-4 w-52"
                                    data-action="live#action"
                                    data-action-name="addElement(variant={{ constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::MercuriusVideo').value }})"
                                    type="button"
                            >
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v18m9-9H3" />
                                </svg>
                                {{ 'feature.presentationpages.editor.edit_form.cta_add_element.mercuriusVideo'|trans }}
                            </button>
                        {% endif %}

                        {% for elementVariant in this.presentationpage.possibleElementVariants %}

                            {# @var elementVariant \App\VideoBasedMarketing\Presentationpages\Domain\Enum\PresentationpageElementVariant #}

                            {% if elementVariant is not same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::MercuriusVideo') %}
                                <button
                                        class="cta-link-primary mb-4 w-52"
                                        data-action="live#action"
                                        data-action-name="addElement(variant={{ elementVariant.value }})"
                                        type="button"
                                >
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v18m9-9H3" />
                                    </svg>
                                    {{ ('feature.presentationpages.editor.edit_form.cta_add_element.' ~ elementVariant.value)|trans }}
                                </button>
                            {% endif %}

                        {% endfor %}

                    {% endif %}

                </div>


                <button class="cta-link-success">
                    <svg xmlns="http://www.w3.org/2000/svg" class="heroicon-next-to-text" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4" />
                    </svg>
                    {{ ('feature.presentationpages.editor.edit_form.save_button_' ~ this.presentationpage.type.value)|trans }}
                </button>

                {{ form_end(form) }}
            </div>

        {% endblock %}




        {% block contentRight %}

            <div class="sm:fixed sm:top-16 bg-gray-100 p-8 rounded-l-lg shadow shadow-2xl shadow-gray-700 h-full overflow-scroll">

                <h1 class="mb-6 font-bold text-xl">
                    {{ ('feature.presentationpages.editor.edit_form.preview_headline_' ~ this.presentationpage.type.value)|trans }}
                </h1>

                {% if this.presentationpage.presentationpageElements.count is same as 0 %}

                    <p>
                        {{ ('feature.presentationpages.editor.edit_form.preview_note_no_elements_' ~ this.presentationpage.type.value)|trans }}
                    </p>

                {% else %}

                    <p class="mb-6">
                        {{ ('feature.presentationpages.editor.edit_form.preview_note_' ~ this.presentationpage.type.value)|trans }}
                    </p>

                    <p class="mb-2">
                        {{ ('feature.presentationpages.editor.edit_form.preview_full_note_' ~ this.presentationpage.type.value)|trans }}
                    </p>
                    <p class="mb-6">
                        <a
                                class="cta-link-primary"
                                target="_blank"
                                href="{{ path('feature.presentationpages.preview', { presentationpageId: this.presentationpage.id }) }}"
                        >
                            {{ 'feature.presentationpages.editor.edit_form.preview_full_note_cta'|trans }}
                        </a>
                    </p>

                    <div
                            class="flex flex-col rounded-md shadow-inner text-left justify-start pt-8 pl-8 pr-8 pb-0"

                            {% if this.presentationpage.background is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageBackground::BgColor') %}
                                style="background-color: {{ this.presentationpage.bgColor.value }};"
                            {% else %}
                                style="
                                        background-image: url('{{ asset('assets/images/feature/presentationpages/background-images/' ~ this.presentationpage.background.toPreviewAssetName) }}');
                                        background-repeat: no-repeat;
                                        background-size: cover;
                                        background-position: top;
                                        background-attachment: local;
                                "
                            {% endif %}
                    >
                        <div
                            class="p-4"
                            style="
                                    background-color: {{ this.presentationpage.bgColor.value }}dd;
                                    color: {{ this.presentationpage.textColor.value }};
                            "
                        >
                            {% for element in this.presentationpage.presentationpageElements %}
                                {# @var element \App\VideoBasedMarketing\Presentationpages\Domain\Entity\PresentationpageElement #}

                                {% if element.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::Divider') %}
                                    <div
                                            class="w-full h-1 mt-4 mb-4"
                                            style="background-color: {{ presentationpage.fgColor.value }}"
                                    ></div>
                                {% endif %}

                                {% if element.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::MercuriusVideo') %}
                                    <div class="
                                    flex
                                    flex-row
                                    mb-2
                                    w-full
                                    {% if element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Left') %}
                                        justify-start
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Center') %}
                                        justify-center
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Right') %}
                                        justify-end
                                    {% endif %}
                                ">
                                        {% if element.presentationpage.video is null %}
                                            <img
                                                    class="w-56 rounded-md"
                                                    src="{{ asset('assets/images/feature/presentationpages/video-placeholder-768x432.png') }}"
                                            >
                                        {% else %}
                                            <img
                                                    class="w-56 rounded-md"
                                                    src="{{ TwigHelperService.videoService.posterStillAssetUrl(this.presentationpage.video) }}"
                                            >
                                        {% endif %}
                                    </div>
                                {% endif %}

                                {% if element.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::Headline') %}
                                    <h2 class="
                                    text-3xl
                                    mt-6
                                    mb-6
                                    first:mt-0
                                    {% if element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Left') %}
                                        text-left
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Center') %}
                                        text-center
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Right') %}
                                        text-right
                                    {% endif %}
                                ">
                                        {{ element.textContent }}
                                    </h2>
                                {% endif %}

                                {% if element.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::Paragraph') %}
                                    <p class="
                                    mb-2
                                    {% if element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Left') %}
                                        text-left
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Center') %}
                                        text-center
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Right') %}
                                        text-right
                                    {% endif %}
                                ">
                                        {{ element.textContent|nl2br }}
                                    </p>
                                {% endif %}

                                {% if element.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::ImageUrl') %}
                                    <div class="
                                    flex
                                    flex-row
                                    mb-2
                                    w-full
                                    {% if element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Left') %}
                                        justify-start
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Center') %}
                                        justify-center
                                    {% elseif element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Right') %}
                                        justify-end
                                    {% endif %}
                                ">
                                        <img
                                                class="w-56"
                                                src="{{ element.textContent }}"
                                        >
                                    </div>
                                {% endif %}

                                {% if element.elementVariant is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementVariant::CalendlyEmbed') %}
                                    <div class="
                                    flex
                                    flex-row
                                    mb-2
                                    w-full
                                    {% if element.elementHorizontalPosition is same as constant('\\App\\VideoBasedMarketing\\Presentationpages\\Domain\\Enum\\PresentationpageElementHorizontalPosition::Left') %}
                                        justify-start
