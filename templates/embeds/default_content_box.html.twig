<div class="overflow-hidden">

    <div class="padded-content-box bg-gray-400 shadow-inner shadow-gray-500">
        <h3 class="text-lg leading-6 font-medium text-gray-900">
            {% block contentBoxTitle %}{% endblock %}
        </h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
            {% block contentBoxSubtitle %}{% endblock %}
        </p>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="
                {% apply spaceless %}
                    rounded-md
                    p-8
                    m-4
                    sm:m-8
                    text-lg
                    font-bold
                    {% if label is same as 'success' %} bg-lime-300 text-lime-900 {% endif %}
                    {% if label is same as 'info' %} bg-indigo-300 text-indigo-900 {% endif %}
                    {% if label is same as 'warning' %} bg-orange-300 text-orange-900 {% endif %}
                    {% if label is same as 'danger' %} bg-red-300 text-red-900 {% endif %}
                {% endapply %}
            ">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="padded-content-box">
         {% block contentBoxContent %}{% endblock %}
    </div>

</div>
