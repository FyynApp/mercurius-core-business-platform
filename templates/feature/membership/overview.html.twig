{% extends 'base.html.twig' %}

{% block body %}


    {% embed 'embeds/default_content_box.html.twig' %}
        {% block contentBoxTitle %}
            {{ 'feature.membership.overview.title'|trans }}
        {% endblock %}

        {% block contentBoxSubtitle %}
            {{ 'feature.membership.overview.subtitle'|trans }}
        {% endblock %}

        {% block contentBoxContent %}

            <div class="mb-8">
                <span>
                    {{ 'feature.membership.overview.current_plan'|trans }}
                </span>
                <span class="font-bold">
                    {{ ('feature.membership.overview.plan.' ~ currentPlan.name.value ~ '.title')|trans }}
                </span>

            </div>

            <div class="mb-4">
                {{ 'feature.membership.overview.available_plans'|trans }}
            </div>

            <div class="flex flex-row justify-between items-center gap-8 max-w-fit">
                {% for plan in availablePlans %}
                    <div
                            class="
                                flex flex-col justify-center w-40 h-60 bg-indigo-200 text-indigo-900 rounded-md text-center
                                p-4 shadow-lg border-1 border-indigo-300
                            "
                    >
                        <div
                            class="text-lg font-bold mb-2"
                        >
                            {{ ('feature.membership.overview.plan.' ~ plan.name.value ~ '.title')|trans }}
                        </div>

                        <div
                                class="text-sm"
                        >
                            {{ ('feature.membership.overview.plan.' ~ plan.name.value ~ '.description')|trans }}
                        </div>
                    </div>
                {% endfor %}
            </div>

        {% endblock %}

    {% endembed %}

{% endblock %}
