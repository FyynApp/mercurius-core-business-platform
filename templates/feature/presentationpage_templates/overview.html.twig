{% extends 'base.html.twig' %}

{% import 'macros/global.html.twig' as global %}

{% block title %}{{ 'mainnav.presentationpage_templates'|trans }}{% endblock %}
{% block contentTitle %}{{ 'mainnav.presentationpage_templates'|trans }}{% endblock %}

{# @var presentationpageTemplates \App\Entity\Feature\PresentationpageTemplates\PresentationpageTemplate[] #}

{% block body %}

    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        {{
            global.contentBoxHeader(
                'feature.presentationpage_templates.overview.title'|trans({ numberOfTemplates: presentationpageTemplates|length}),
                'feature.presentationpage_templates.overview.subtitle'|trans
            )
        }}
        <div class="border-t border-gray-200">
            <div class="p-10 bg-gray-200">
                <div class="border-4 border-dashed border-gray-300 rounded-lg h-96">

                    <div class="flex justify-center items-center h-full w-full">
                        <!-- Heroicon name: solid/plus-circle -->
                        <a href="#">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-indigo-600 hover:text-indigo-700" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                            </svg>
                        </a>
                        <a href="#">
                            {{ 'feature.presentationpage_templates.overview.cta.add'|trans }}
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
