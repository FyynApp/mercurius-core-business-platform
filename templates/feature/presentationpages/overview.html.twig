{% extends 'base.html.twig' %}

{# @var PresentationpagesService \App\Service\Feature\Presentationpages\PresentationpagesService #}

{% block title %}{{ 'mainnav.presentationpages'|trans }}{% endblock %}
{% block contentTitle %}{{ 'mainnav.presentationpages'|trans }}{% endblock %}

{% block body %}

    {% embed 'embeds/default_content_box.html.twig' %}
        {% block contentBoxTitle %}
            {{ 'feature.presentationpages.overview.title'|trans }}
        {% endblock %}

        {% block contentBoxSubtitle %}
            {{ 'feature.presentationpages.overview.subtitle'|trans }}
        {% endblock %}

        {% block contentBoxContent %}

            <div class="collection-box">

                {% embed 'embeds/two_column_content_box_content_row.html.twig' with { colspanLeft: 6, colspanRight: 6 } %}
                    {% block contentLeft %}

                        <h2 class="text-xl font-bold mb-4">
                            {{ 'feature.presentationpages.overview.headline_pages'|trans }}
                        </h2>

                        <form
                                class="mb-4"
                                action="{{ path('feature.presentationpages.create_page') }}"
                                method="post"
                        >
                            <button
                                    class="flex flex-col sm:flex-row items-center"
                                    type="submit"
                            >
                                <!-- Heroicon name: solid/plus-circle -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-indigo-600 hover:text-indigo-700" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                                </svg>
                                {{ 'feature.presentationpages.overview.cta.create_page'|trans }}
                            </button>
                        </form>

                        {% for presentationpage in PresentationpagesService.presentationpagesForUser(app.user, constant('\\App\\Entity\\Feature\\Presentationpages\\PresentationpageType::Page')) %}
                            {# @var presentationpage \App\Entity\Feature\Presentationpages\presentationpage #}

                            <div class="mb-4 p-4 bg-indigo-200 rounded-md">
                                <h3 class="text-lg font-bold">
                                    {{ presentationpage.title }}
                                </h3>

                                <div>
                                    <a
                                            class="cta-link-primary-small"
                                            href="{{ path('feature.presentationpages.editor', { presentationpageId: presentationpage.id }) }}">
                                        {{ 'feature.presentationpages.overview.cta.edit_page'|trans }}
                                    </a>

                                    <a
                                            class="cta-link-primary-small"
                                            target="_blank"
                                            href="{{ path('feature.presentationpages.preview', { presentationpageId: presentationpage.id }) }}">
                                        {{ 'feature.presentationpages.overview.cta.preview_page'|trans }}
                                    </a>
                                </div>
                            </div>

                        {% endfor %}

                    {% endblock %}
                    {% block contentRight %}

                        <h2 class="text-xl font-bold mb-4">
                            {{ 'feature.presentationpages.overview.headline_templates'|trans }}
                        </h2>

                        <form
                                class="mb-4"
                                action="{{ path('feature.presentationpages.create_template') }}"
                                method="post"
                        >
                            <button
                                    class="flex flex-col sm:flex-row items-center"
                                    type="submit"
                            >
                                <!-- Heroicon name: solid/plus-circle -->
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-indigo-600 hover:text-indigo-700" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-11a1 1 0 10-2 0v2H7a1 1 0 100 2h2v2a1 1 0 102 0v-2h2a1 1 0 100-2h-2V7z" clip-rule="evenodd" />
                                </svg>
                                {{ 'feature.presentationpages.overview.cta.create_template'|trans }}
                            </button>
                        </form>

                        {% for presentationpage in PresentationpagesService.presentationpagesForUser(app.user, constant('\\App\\Entity\\Feature\\Presentationpages\\PresentationpageType::Template')) %}
                            {# @var presentationpage \App\Entity\Feature\Presentationpages\presentationpage #}

                            <div class="mb-4 p-4 bg-indigo-50 rounded-md">
                                <h3 class="text-lg font-bold">
                                    {{ presentationpage.title }}
                                </h3>

                                <div>
                                    <a
                                            class="cta-link-primary-small"
                                            href="{{ path('feature.presentationpages.editor', { presentationpageId: presentationpage.id }) }}">
                                        {{ 'feature.presentationpages.overview.cta.edit_template'|trans }}
                                    </a>

                                    <a
                                            class="cta-link-primary-small"
                                            target="_blank"
                                            href="{{ path('feature.presentationpages.preview', { presentationpageId: presentationpage.id }) }}">
                                        {{ 'feature.presentationpages.overview.cta.preview_template'|trans }}
                                    </a>

                                    <form class="inline-block">
                                        <button
                                                class="cta-link-primary-small"
                                                type="submit"
                                        >
                                            {{ 'feature.presentationpages.overview.cta.create_page_from_template'|trans }}
                                        </button>
                                    </form>
                                </div>
                            </div>

                        {% endfor %}

                    {% endblock %}
                {% endembed %}

            </div>


        {% endblock %}
    {% endembed %}

{% endblock %}
