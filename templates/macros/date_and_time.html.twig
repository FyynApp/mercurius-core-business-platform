{# @var TwigHelperService \App\Shared\Twig\Presentation\Service\TwigHelperService #}

{% macro full(dateAndTime) %}
    {{
        'dateformat.datetime_normal'
            |trans({
                'date': dateAndTime
                |format_datetime(
                    'long',
                    'short',
                    locale=app.request.locale,
                    timezone=TwigHelperService.cookiesService.clientTimezone(app.request)
                )
            })
    }}
{% endmacro %}

{% macro shortDateAndTime(dateAndTime) %}
    {{
    'dateformat.datetime_normal'
    |trans({
        'date': dateAndTime
        |format_datetime(
            'short',
            'short',
            locale=app.request.locale,
            timezone=TwigHelperService.cookiesService.clientTimezone(app.request)
        )
    })
    }}
{% endmacro %}
