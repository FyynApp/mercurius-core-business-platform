{% macro inputWithLabel(formView) %}
    <label for="{{ formView.vars.id }}" class="block text-sm font-medium text-gray-700">
        {{ formView.vars.label|trans }}
    </label>
    <input
        type="text"
        name="{{ formView.vars.full_name }}"
        id="{{ formView.vars.id }}"
        value="{{ formView.vars.value|e }}"
        class="{% if form_errors(formView) %}bg-red-50 border-red-900{% else %}border-gray-300{% endif %} mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm rounded-md"
    />

    {% if form_errors(formView) %}
        {% for error in formView.vars.errors.form.getErrors(true) %}
            <p class="mt-2 text-red-800">{{ error.message|trans }}</p>
        {% endfor %}
    {% endif %}

{% endmacro %}

{% macro label(text) %}
    <label class="block text-sm font-medium text-gray-700">{{ text }}</label>
{% endmacro %}

{% macro primarySubmitButton(text) %}
    <button
        type="submit"
        class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10"
    >
        {{ text }}
    </button>
{% endmacro %}
