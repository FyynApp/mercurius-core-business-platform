{% extends 'base.html.twig' %}

{# @var VideoService \App\Service\Feature\Recordings\VideoService #}

{% block title %}Tailwind Playground{% endblock %}
{% block contentTitle %}Tailwind Playground{% endblock %}

{% block body %}

    {% embed 'embeds/default_content_box.html.twig' %}
        {% block contentBoxTitle %}
            Tailwind Playground
        {% endblock %}

        {% block contentBoxSubtitle %}
            Breakpoint:
            <span class="inline sm:hidden">xs</span>
            <span class="hidden sm:inline md:hidden">sm</span>
            <span class="hidden md:inline lg:hidden">md</span>
            <span class="hidden lg:inline xl:hidden">lg</span>
            <span class="hidden xl:inline 2xl:hidden">xl</span>
            <span class="hidden 2xl:inline">2xl</span>

        {% endblock %}

        {% block contentBoxContent %}

            {# ------------------------------------------------------------------------------------ #}
            <div class="mb-16">
                <h1 class="mb-8">Entity Element for Recordings, Presentationpages</h1>


                <div class="rounded-lg shadow-2xl shadow-neutral-300 p-0 w-96 bg-white border-1 border-neutral-200">
                    <div class="m-0 p-0 h-56 overflow-clip">
                        <button>
                        <img
                                class="rounded-tl-lg rounded-tr-lg w-fit hover:contrast-125"
                                src="{{ asset('assets/images/tailwind-playground/video-poster-still-640x480.webp') }}"
                        >
                        </button>
                    </div>

                    <div class="p-4 border-b-2 border-b-gray-100">
                        <p class="text-2xl mb-1">
                            27. September 2022
                        </p>
                        <p class="text-gray-400">
                            <!-- Heroicon: Clock -->
                            <svg
                                    class="w-5 h-5 inline-block align-text-top"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                            >
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            0:56 Minuten
                        </p>
                        <p class="text-gray-400">
                            <!-- Heroicon: Eye -->
                            <svg
                                    class="w-5 h-5 inline-block align-text-top"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"
                            >
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                            7 Aufrufe
                        </p>
                    </div>

                    <div class="p-4">
                        Diese Aufnahme ist noch nicht mit einer Landingpage verbunden.
                    </div>

                    <div class="bg-indigo-300 text-center text-indigo-900 font-bold rounded-bl-lg rounded-br-lg hover:bg-indigo-400">
                        <button class="p-5 w-full h-full uppercase">
                            Landingpage bearbeiten

                            <!-- Heroicon: Chevron-Right -->
                            <svg
                                    class="w-5 h-5 inline-block align-text-top text-indigo-900"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke-width="1.5"
                                    stroke="currentColor"

                            >
                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
                            </svg>
                        </button>
                    </div>

                    <!--
                    <div class="bg-lime-300 text-center text-lime-900 font-bold rounded-bl-lg rounded-br-lg">
                        <button class="p-4 w-full h-full uppercase">
                            Landingpage anlegen
                        </button>
                    </div>
                    -->

                </div>

            </div>







            {# ------------------------------------------------------------------------------------ #}
            <div class="mb-16">

                <div class="
                        border-1
                        border-gray-300
                        rounded-md
                        divide-y
                        divide-gray-300
                        max-w-7xl
                        bg-white
                ">

                    <div class="
                            grid
                            grid-cols-4
                            p-4
                            justify-between
                            items-start
                            gap-8
                    ">
                        <h3 class="font-bold">
                            A listed thing
                        </h3>

                        <div class="col-span-2">
                            A description for the thing that is listed.
                        </div>

                        <div class="
                                text-right
                                items-end
                                flex
                                flex-col
                        ">
                            <form
                                    action="#"
                                    method="post"
                                    class="inline-block"
                            >
                                <button
                                        class="cta-link-primary-small"
                                        type="submit"
                                >
                                    Primary action
                                </button>
                            </form>

                            <form
                                    action="#"
                                    method="post"
                                    class="inline-block"
                            >
                                <button
                                        class="cta-link-success-small"
                                        type="submit"
                                >
                                    Success action
                                </button>
                            </form>

                            <form
                                    action="#"
                                    method="post"
                                    class="inline-block"
                            >
                                <button
                                        class="cta-link-danger-small"
                                        type="submit"
                                >
                                    Danger action
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="
                            grid
                            grid-cols-4
                            p-4
                            justify-between
                            items-start
                            gap-8
                    ">
                        <h3 class="font-bold">
                            Another entry in this list
                        </h3>

                        <div class="col-span-2">
                            Here is yet another description for this thing, explaining what it is here for.
                        </div>

                        <div class="
                                text-right
                                items-end
                                flex
                                flex-col
                        ">
                            <form
                                    action="#"
                                    method="post"
                                    class="inline-block"
                            >
                                <button
                                        class="cta-link-primary-small"
                                        type="submit"
                                >
                                    Primary action
                                </button>
                            </form>

                            <form
                                    action="#"
                                    method="post"
                                    class="inline-block"
                            >
                                <button
                                        class="cta-link-success-small"
                                        type="submit"
                                >
                                    Success action
                                </button>
                            </form>

                            <form
                                    action="#"
                                    method="post"
                                    class="inline-block"
                            >
                                <button
                                        class="cta-link-danger-small"
                                        type="submit"
                                >
                                    Danger action
                                </button>
                            </form>
                        </div>
                    </div>

                </div>

            </div>

        {% endblock %}
    {% endembed %}

{% endblock %}
