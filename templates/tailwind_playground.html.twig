{% extends 'base.html.twig' %}

{# @var VideoService \App\Service\Feature\Recordings\VideoService #}

{% block title %}{{ 'mainnav.recordings'|trans }}{% endblock %}
{% block contentTitle %}{{ 'mainnav.recordings'|trans }}{% endblock %}

{% block body %}

    {% embed 'embeds/default_content_box.html.twig' %}
        {% block contentBoxTitle %}
            Tailwind Playground
        {% endblock %}

        {% block contentBoxSubtitle %}
            Breakpoint:
            <span class="inline sm:hidden">xs</span>
            <span class="hidden sm:inline md:hidden">sm</span>
            <span class="hidden md:inline lg:hidden">md</span>
            <span class="hidden lg:inline xl:hidden">lg</span>
            <span class="hidden xl:inline 2xl:hidden">xl</span>
            <span class="hidden 2xl:inline">2xl</span>

        {% endblock %}

        {% block contentBoxContent %}


            <div class="flex flex-wrap gap-4 bg-white justify-between">

                {% for i in 0..10 %}

                    <div class="flex flex-col md:flex-row gap-4 m-6">

                        <div class="md:shrink-0 flex justify-center md:justify-start md:flex-col">
                            <img
                                    class="md:max-w-xs max-h-36 md:max-h-48 rounded-md"
                                    src="{{ asset('generated-content/video-assets/1ed14cd9-7741-66ee-be49-9760c1a19dda/poster-animated.webp') }}"
                            >
                        </div>

                        <div class="flex flex-col gap-4 md:max-w-md mx-auto md:mx-0">
                            <a href="#" class="cta-link-success">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline align-bottom" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Präsentationsseite anlegen
                            </a>

                            <a href="#" class="cta-link-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline align-bottom" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Video löschen
                            </a>

                            {% if i == 5 %}
                                <a href="#" class="cta-link-primary">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 inline align-bottom" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    Video bearbeiten
                                </a>
                            {% endif %}

                            <p>
                                {{ i + 1 }}. August 2022 um 22:16 Uhr
                            </p>

                            <p class="text-gray-400">
                                7 Sekunden lang
                            </p>

                            <p class="text-gray-400">
                                43 Aufrufe
                            </p>

                        </div>

                    </div>

                {% endfor %}

            </div>


        {% endblock %}
    {% endembed %}

{% endblock %}
